package components 

import "snowlabs/chrono/models"

templ layout(slot templ.Component) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<title>chrono</title>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<link rel="stylesheet" href="/static/css/tailwind.css"/>
		</head>
		<body id="contents">
			<div class="container mx-auto">
				@slot
			</div>
		</body>
	</html>
}

templ heading() {
	<h1>My Heading</h1>
}

templ renderEvents(events []models.Event) {
	<div class="grid grid-cols-4">
		for _, event := range events {
			<p class="">{ event.Name }</p>
			<p class="text-green-600">{ event.Start }</p>
			<p class="text-red-600">{ event.End }</p>
			<p>{ event.Platform }</p>
		}
	</div>
}

templ Root(events []models.Event) {
	@layout(renderEvents(events))
}
